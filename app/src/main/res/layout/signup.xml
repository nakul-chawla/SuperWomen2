<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/superwomen1">
    <LinearLayout
        android:id="@+id/linlaHeaderProgress"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linlaHeaderProgress"
        android:layout_marginTop="37dp"
        android:text="LOGIN"
        android:textAlignment="center"
        android:textSize="40dp"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="83dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/mail"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="23dp"
        android:layout_weight="1"
        android:height="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter email"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="200dp"
        android:layout_height="40dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="114dp"
        android:layout_weight="1"
        android:height="30dp"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Enter password"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editText3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:layout_weight="1"
        android:background="@color/contrast"
        android:fontFamily="serif"
        android:text="LogIn"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="40dp"

        android:layout_alignTop="@+id/mail"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/linlaHeaderProgress"
        android:layout_toRightOf="@+id/linlaHeaderProgress"
        android:text="E-MAIL"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_above="@+id/button4"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:text="PASSWORD"
        android:textSize="25dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mail"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>